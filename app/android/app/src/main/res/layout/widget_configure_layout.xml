<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:padding="16dp">

    <TextView
        android:id="@+id/widget_configure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a List to Display"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="16dp"/>

    <ListView
        android:id="@+id/widget_configure_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice" />

    <TextView
        android:id="@+id/widget_configure_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No lists available. Please create a list in the app first."
        android:visibility="gone" />

    <Button
        android:id="@+id/widget_configure_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Add Widget" />

</LinearLayout>